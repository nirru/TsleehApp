<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    tools:context="com.oxilo.tsleehapp.fragment.ListFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@id/id_ribion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_riboon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_ribion"
        android:layout_alignRight="@id/id_ribion"
        android:layout_alignTop="@id/id_ribion"
        android:layout_alignBottom="@id/id_ribion"
        android:text="@string/offer"
        android:paddingLeft="@dimen/offer_padding"
        android:paddingRight="@dimen/offer_padding"
        android:layout_marginLeft="@dimen/offer_padding"
        android:layout_marginRight="@dimen/offer_padding"
        android:textSize="@dimen/offer_text_size"
        android:textColor="@color/color_white"
        android:paddingTop="10dp"
        android:gravity="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@id/id_recyleview"
        android:name="com.oxilo.tsleehapp.fragment.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.oxilo.tsleehapp.fragment.ItemFragment"
        tools:listitem="@layout/fragment_item"
        android:layout_below="@+id/id_ribion"/>

</RelativeLayout>
